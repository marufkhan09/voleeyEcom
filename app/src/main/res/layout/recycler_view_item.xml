<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:background="#7889E8"> <!-- Use a color resource -->

    <!-- Image Section -->
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="dasdasd" /> <!-- Add accessibility -->

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" /> <!-- Add ellipsize to handle long titles -->

        <!-- Description -->
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A5A0A0"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2" /> <!-- Limit to 2 lines -->

        <!-- Price -->
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</LinearLayout>
